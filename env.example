# ========== Application Config ==========
APP_NAME=Model Converter Tool
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ========== Redis Config ==========
REDIS_URL=redis://localhost:6379/0

# ========== File Storage Config ==========
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
MAX_FILE_SIZE=1073741824
TEMP_DIR=temp

# ========== Cache Config ==========
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_PREFIX=model_converter
PRELOAD_MODELS=true
MAX_CACHE_SIZE=10

# ========== Monitoring Config ==========
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
MONITORING_INTERVAL=30
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ========== Performance Thresholds ==========
CPU_WARNING_THRESHOLD=80.0
CPU_CRITICAL_THRESHOLD=95.0
MEMORY_WARNING_THRESHOLD=85.0
MEMORY_CRITICAL_THRESHOLD=95.0
DISK_WARNING_THRESHOLD=90.0
DISK_CRITICAL_THRESHOLD=95.0

# ========== CORS Config ==========
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ========== Task Config ==========
TASK_TIMEOUT_MINUTES=60
MAX_CONCURRENT_TASKS=5
TASK_RETRY_LIMIT=3
TASK_RETRY_DELAY=60

# ========== Supported Formats and Model Types ==========
SUPPORTED_FORMATS=["onnx", "gptq", "awq", "gguf", "mlx", "tensorrt", "openvino", "tensorflow", "tflite", "coreml", "torchscript", "int8", "fp16"]
SUPPORTED_MODEL_TYPES=["causal_lm", "seq2seq", "encoder", "vision"]

# ========== Logging Config ==========
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
CELERY_LOG_FILE=logs/celery.log
MONITORING_LOG_FILE=logs/monitoring.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ========== Security Config ==========
SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=100
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENABLE_AUTHENTICATION=false

# ========== Database Config (Optional) ==========
DATABASE_URL=sqlite:///./model_converter.db

# ========== External Services Config ==========
HUGGINGFACE_TOKEN=
HUGGINGFACE_CACHE_DIR=~/.cache/huggingface

# ========== GPU Config ==========
CUDA_VISIBLE_DEVICES=0
USE_GPU=true
GPU_MEMORY_FRACTION=0.8

# ========== Model Conversion Specific Config ==========
ONNX_OPSET_VERSION=11
ONNX_ATOL=1e-4
GPTQ_BITS=4
AWQ_BITS=4
TENSORRT_PRECISION=fp16
OPENVINO_PRECISION=FP16

# ========== Development Config ==========
RELOAD=true
WORKERS=1
ACCESS_LOG=true

# Quantization default values
DEFAULT_GPTQ_BITS=4
DEFAULT_GPTQ_GROUP_SIZE=128
DEFAULT_AWQ_BITS=4
DEFAULT_AWQ_GROUP_SIZE=120

# Security config
ENABLE_CORS=true
ALLOWED_ORIGINS=["*"]

# Celery config
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0 